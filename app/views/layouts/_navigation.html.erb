<% if logged_in? %>

  <ul class="nav navbar-nav navbar-right">
  <li class="dropdown">  
  <%= link_to '#', class: "dropdown-toggle",
  'data-toggle' => "dropdown" do %>  
   
   <%= current_user.name %> <b class="caret"></b> 
   <% end %>
   <ul class="dropdown-menu">  
    <li> <%= link_to "View Profile", user_path(current_user)%></li>
    <li><%= link_to  "Edit Profile", edit_user_path(current_user)%></li>

     <% if current_user.is_reader? %>
        <li> <%= link_to "Recommended Content", category_path(current_user.reader.show_interest) if current_user.reader.show_interest %> </li>
     <% end %> 


    <% if(current_user.is_author?) %>   
      <li><%= link_to  "Create Content", new_content_path%></li> 
    <% end %>

    <li><%= link_to  "Inbox", messages_path%></li> 


    <li class="divider"></li>
    <li> <%= link_to "Delete Account", current_user,       
              method: :delete,
              data: { confirm: 'Are you sure?' } %> </li>  

     <li><%= link_to "Logout", logout_path %></li>           
   </ul>  
  </li>  
 </ul>

<% else %>
  <ul class="nav navbar-nav navbar-right">
    <li>
      <%= link_to "Login", login_path %>  
    </li>
  </ul>
<% end %>