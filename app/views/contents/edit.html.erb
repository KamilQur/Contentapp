<p>
	<h1>Edit content's description</h1>
   <hr/>
</p> 
  


 
<% if@content.errors.any? %>
 <div class="row">
 <div class="alert alert-danger col-md-8 col-md-offset-2">  
   <h5>Please correct the following errors:</h5>
   <ul>
     <% @content.errors.full_messages.each do |msg|%>
       <li><%= msg %></li> 
     <% end %> 
   </ul>
 </div>   
 </div>
<% end %> 
  



<div class="row">
<div class="well col-md-8 col-md-offset-2">
  <%= form_for @content, :class => "form-horizontal" do |f| %>

    <div class="form-group">
      <label class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => "form-control", :placeholder => "Name", :id => "Name" %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">Description</label>
      <div class="col-lg-10">
        <%= f.text_area :description,cols: "20", rows: "5", :class => "form-control", :placeholder => "description", :id => "description" %>
      </div>
    </div>


    <div class="form-group">
      <label class="col-lg-2 control-label"></label>
      <div class="col-lg-10">    
        <br/>
    
        <%= f.submit 'Update description', class: "btn btn-success" %> 
      </div>
    </div>

    <% end %> 
	
</div>	
</div> 


































 