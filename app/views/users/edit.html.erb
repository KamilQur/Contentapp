<%= render 'shared/page_title',title: "Update Profile " %>   
<%= render 'form' %> 


<div class="row">
	<div class="well col-md-8 col-md-offset-2"> 

<%if current_user.is_reader? %>
	<%= form_for current_user.reader  do |f| %>
		
	<div class="form-group">
		<label for="inputEmail" class="col-lg-2 control-label">Category</label>
      <div class="col-lg-10">
		<%= f.select :interest, Category.all.collect {|c| [ c.name, c.id ] }, :prompt => 'Select One' %>
      </div>




      		<div class="form-group">
		    	<div class="col-lg-10 col-lg-offset-2">
		    		<br>
					<%= f.submit('Update category',class:"btn btn-success") %>  
	            </div>
	        </div>

    

  
	<% end %> 


<% end %>

</div>
</div>